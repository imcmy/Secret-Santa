page {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100vh;
}

.top-bar {
    margin-bottom: 40rpx;
    height: 200rpx;
    width: 100%;
    background-size: cover;
    border-left: none;
    border-right: none;
    display: flex;
    transition: all 300ms ease;
    box-sizing: border-box;
}

.userinfo {
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding:0 16px;
}

.userinfo-avatar {
    width: 140rpx;
    height: 140rpx;
    border-radius: 16rpx;
    background-size: cover;
    background-color: white;
}

.userinfo-avatar[size] {
    width: 140rpx;
}

.userinfo-avatar:after {
    border: none;
}

.userinfo-avatar > image {
    width: 100%;
    height: 100%;
    border-radius: 16rpx;
}

.userinfo-nickname {
    font-size: 34rpx;
    font-weight: 700;
    text-align: right;
}

.userinfo-address {
    font-size: 28rpx;
    font-weight: 500;
    text-align: left;
}

.userinfo-detail-wrapper {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
