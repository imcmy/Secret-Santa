.flex-center {
    height: 100%;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}

.updown {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.slot {
    display: flex;
    height: 100%;
}

.slot-button {
    height: 100% !important;
    width: 60px !important;
    border: 0 !important;
}