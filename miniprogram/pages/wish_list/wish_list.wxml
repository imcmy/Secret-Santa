<view class="main">
    <view>
        <van-index-bar index-list="{{[]}}">
            <view>
                <van-index-anchor wx:if="{{wishlist.length > 0}}" index="首选愿望">首选愿望</van-index-anchor>
                <van-swipe-cell right-width="{{120}}" wx:for="{{wishlist}}" wx:if="{{index < 3}}" wx:key="wishlist" wx:for-item="wish">
                    <van-cell center title="{{wish.name}}" label="{{wish.comment}}">
                        <view slot="right-icon" class="updown">
                            <van-icon id="{{index}}" wx:if="{{wishlist.length > 1 && index < (wishlist.length - 1)}}" name="arrow-down" bind:click="onWishDown" />
                            <view wx:if="{{index > 0}}" style="width: 14px;"></view>
                            <van-icon id="{{index}}" wx:if="{{index > 0}}" name="arrow-up" bind:click="onWishUp" />
                        </view>
                    </van-cell>
                    <view slot="right" class="slot">
                        <van-button id="{{index}}" type="primary" block square custom-class="slot-button" bind:click="onWishModify">修改</van-button>
                        <van-button id="{{index}}" type="danger" block square custom-class="slot-button" bind:click="onWishRemove">删除</van-button>
                    </view>
                </van-swipe-cell>
            </view>

            <view wx:if="{{wishlist.length > 3}}">
                <van-index-anchor index="备选愿望">备选愿望</van-index-anchor>
                <van-swipe-cell right-width="{{120}}" wx:for="{{wishlist}}" wx:if="{{index > 2}}" wx:key="wishlist" wx:for-item="wish">
                    <van-cell center title="{{wish.name}}" label="{{wish.comment}}">
                        <view slot="right-icon" class="updown">
                            <van-icon id="{{index}}" wx:if="{{wishlist.length > 1 && index < (wishlist.length - 1)}}" name="arrow-down" bind:click="onWishDown" />
                            <view wx:if="{{index > 0}}" style="width: 14px;"></view>
                            <van-icon id="{{index}}" wx:if="{{index > 0}}" name="arrow-up" bind:click="onWishUp" />
                        </view>
                    </van-cell>
                    <view slot="right" class="slot">
                        <van-button id="{{index}}" type="primary" block square custom-class="slot-button" bind:click="onWishModify">修改</van-button>
                        <van-button id="{{index}}" type="danger" block square custom-class="slot-button" bind:click="onWishRemove">删除</van-button>
                    </view>
                </van-swipe-cell>
            </view>
        </van-index-bar>
    </view>
    <view wx:if="{{wishlist.length === 0}}" class="weui-flex flex-center">
        <van-empty image="/images/wish-list.png" description="愿望清单还空着" />
    </view>
</view>

<van-popup show="{{popup}}" round position="bottom" bind:close="onPopupHide" custom-class="weui-half-screen-dialog">
    <view class="weui-half-screen-dialog__hd" style="padding-bottom: 0">
        <view class="weui-half-screen-dialog__hd__main">
            <view class="weui-half-screen-dialog__title">我的愿望</view>
        </view>
    </view>
    <view class="weui-half-screen-dialog__bd" style="padding: 0 0 32px;">
        <form>
            <van-cell-group>
                <van-field model:value="{{nameField}}" error="{{nameError}}" type="text" size="large" required clearable label="名称" placeholder="请输入愿望" />
                <van-field model:value="{{commentField}}" error="{{commentError}}" type="textarea" size="large" clearable autosize disable-default-padding label="备注" placeholder="添加额外的信息" />
            </van-cell-group>
        </form>
    </view>
    <view class="weui-half-screen-dialog__ft" style="padding: 0 0 32px;">
        <button type="default" class="weui-btn" bindtap="onPopupHide">取消</button>
        <button type="primary" class="weui-btn" bindtap="onPopupSubmit">确认</button>
    </view>
</van-popup>

<view class="footer" bindtap="onCreateWish">
    <text>添加愿望</text>
</view>