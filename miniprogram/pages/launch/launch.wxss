/* pages/launch/launch.wxss */
page {
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
}

.body {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.weui-loadmore__tips {
    color: #969799;
}

@media (prefers-color-scheme: dark) {
    .weui-loadmore__tips {
        color: #FFFFFF;
    }
    .weui-footer__text {
        color: #FFFFFF;
    }
}

.weui-footer {
    padding-bottom: 64rpx;
}

.copyleft {
    display: inline-block;
    transform: rotate(180deg);
}