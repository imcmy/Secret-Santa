page {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    height: 100%;
}

.top-bar {
    margin-bottom: 40rpx;
    height: 200rpx;
    width: 100%;
    background-size: cover;
    border-left: none;
    border-right: none;
    display: flex;
    transition: all 300ms ease;
    box-sizing: border-box;
}

.userinfo {
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding:0 16px;
}

.login {
    background: #FFFFFF;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.userinfo-avatar {
    width: 140rpx;
    height: 140rpx;
    border-radius: 16rpx;
    background-size: cover;
}

.userinfo-avatar[size] {
    width: 140rpx;
}

.userinfo-avatar:after {
    border: none;
}

.userinfo-avatar>image {
    width: 100%;
    height: 100%;
    border-radius: 16rpx;
}

.userinfo-detail-wrapper {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.userinfo-nickname {
    font-size: 34rpx;
    font-weight: 700;
    text-align: right;
}

.userinfo-address {
    font-size: 28rpx;
    font-weight: 500;
    text-align: left;
}

.flex-center {
    height: 100%;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}

.van-empty__image__img {
    width: 256rpx;
    opacity: 0.4;
}

.hint-image {
    width: 256rpx;
    opacity: 0.4;
}

.hint-text {
    padding-top: 32rpx;
    font-weight: 900 !important;
    opacity: 0.4;
}
