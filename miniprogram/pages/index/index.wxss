/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: 100%;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif !important;
}

.top-bar {
  margin-bottom: 40rpx;
  height: 200rpx;
  width: 100%;
  background: #fff;
  border-left: none;
  border-right: none;
  display: flex;
  transition: all 300ms ease;
  box-sizing: border-box;
}

.userinfo {
  flex-direction: row;
  align-items: center;
  padding-left: 60rpx;
}

.login {
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar[size] {
  width: 100rpx;
}


.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  text-align: left;
}

.userinfo-address {
  font-size: 24rpx;
  text-align: left;
  padding-top: 10rpx;
}

.userinfo-detail-wrapper {
  display: flex;
  flex-direction: column;
  justify-content:space-between;
  padding-left: 30rpx;
  padding-right: 60rpx;
}

.hint {
  padding-top: 20rpx;
  color: #999999;
}

.login-button {
  color: #000 !important;
  background-color: #f8f8f8 !important;
  font-weight: 700 !important;
  border-width: 0 !important;
  width: 368rpx !important;
  --button-default-height: 80rpx !important;
}
