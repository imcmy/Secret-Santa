<!--index.wxml-->
<view wx:if="{{logged}}" class="top-bar userinfo" bindtap="onTapUser">
    <van-image  round fit="cover" width="150rpx" height="150rpx" src="{{avatarUrl}}" />
    <view class="userinfo-detail-wrapper">
      <text class="userinfo-nickname">{{ nickName }}</text>
      <text class="userinfo-address">{{ addressInfo }}</text>
    </view>
</view>
<view wx:else class="top-bar login">
      <button open-type="getUserInfo" bindgetuserinfo="onGetUserInfo">点击登录</button>
      <text class="hint userinfo-address">程序会收集您的：(1)用户名等基本信息；(2)地址等收货信息</text>
</view>

<van-tabs animated>
  <van-tab title="进行中" info="{{event.current.length}}">
    <van-cell-group wx:for="{{ event.current }}" wx:key="curEve" wx:for-item="eve">
      <van-cell
        title="{{ eve.eventName }}"
        label="抽签于 {{eve.rollTimeFormatted }}"
        link-type="navigateTo"
        url="/pages/gift/gift?eid={{eve._id}}&status=0"
        is-link
        center
      />
    </van-cell-group>
  </van-tab>
  <van-tab title="未开始">
    <van-cell-group wx:for="{{ event.wait }}" wx:key="endEve" wx:for-item="eve">
      <van-cell
        title="{{ eve.eventName }}"
        label="开始于 {{ eve.startTimeFormatted }}"
        link-type="navigateTo"
        url="/pages/gift/gift?eid={{eve._id}}&status=1"
        is-link
        center
      />
    </van-cell-group>
  </van-tab>
  <van-tab title="已结束">
    <van-cell-group wx:for="{{ event.end }}" wx:key="endEve" wx:for-item="eve">
      <van-cell
        title="{{ eve.eventName }}"
        label="结束于 {{ eve.rollTimeFormatted }}"
        link-type="navigateTo"
        url="/pages/gift/gift?eid={{eve._id}}&status=2"
        is-link
        center
      />
    </van-cell-group>
  </van-tab>
</van-tabs>