/* miniprogram/pages/user/user.wxss */
page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.top-bar {
  margin-bottom: 40rpx;
  height: 200rpx;
  width: 100%;
  background: #fff;
  border-left: none;
  border-right: none;
  display: flex;
  transition: all 300ms ease;
}

.userinfo {
  flex-direction: row;
  align-items: center;
  padding-left: 60rpx;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar[size] {
  width: 100rpx;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  text-align: left;
}

.userinfo-address {
  font-size: 24rpx;
  text-align: left;
  padding-top: 10rpx;
}

.userinfo-detail-wrapper {
  display: flex;
  flex-direction: column;
  justify-content:space-between;
  padding-left: 30rpx;
  padding-right: 120rpx;
}

.about {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 70rpx 40rpx;
}